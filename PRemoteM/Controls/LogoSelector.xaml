<UserControl x:Class="PRM.Core.Resources.Controls.LogoSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:PRM.Core.Resources.Controls;assembly=PRM.Core"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="144"
             MouseWheel="Window_OnMouseWheel">
    <UserControl.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ScrollBar.Pressed.Thumb" Color="#606060" />
            <Style x:Key="ScrollBarThumbHorizontal" TargetType="{x:Type Thumb}">
                <Setter Property="OverridesDefaultStyle" Value="true" />
                <Setter Property="IsTabStop" Value="false" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Ellipse Width="10" Height="10"
                                     x:Name="rectangle"
                                     Fill="{DynamicResource MainColor1Brush}"
                                     SnapsToDevicePixels="True" ></Ellipse>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="true">
                                    <Setter Property="Fill" TargetName="rectangle" Value="{DynamicResource MainColor2Brush}" />
                                </Trigger>
                                <Trigger Property="IsDragging" Value="true">
                                    <Setter Property="Fill" TargetName="rectangle" Value="{DynamicResource MainColor2Brush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="LogoSelectorZoomScrollBarStyle" TargetType="{x:Type ScrollBar}">
                <Setter Property="Width" Value="Auto" />
                <Setter Property="BorderThickness" Value="0,1" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="Bg" SnapsToDevicePixels="true">
                                <Border BorderThickness="1" BorderBrush="DarkGray" Height="1" Margin="2"></Border>
                                <Track x:Name="PART_Track" IsEnabled="{TemplateBinding IsMouseOver}"
                                       ViewportSize="NaN">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ScrollBarThumbHorizontal}" />
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
