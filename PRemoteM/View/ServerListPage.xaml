<UserControl x:Class="PRM.View.ServerListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:PRM.Controls"
             xmlns:controls1="clr-namespace:PRM.Core.Resources.Controls;assembly=PRM.Core"
             xmlns:prm="clr-namespace:PRM;assembly=PRM.Core"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:viewModel="clr-namespace:PRM.ViewModel"
             xmlns:model="clr-namespace:PRM.Core.Model;assembly=PRM.Core"
             xmlns:protocol="clr-namespace:PRM.Core.Protocol;assembly=PRM.Core"
             xmlns:utils="clr-namespace:Shawn.Utils;assembly=PRM.Core"
             mc:Ignorable="d"
             Name="ThisServerListPage"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/MinHorizontalScrollViewerStyle.xaml"></ResourceDictionary>
                <ResourceDictionary Source="../Styles/PRM_ScrollViewerControlTemplate.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="ScrollViewer">
                <Setter Property="Template" Value="{StaticResource PRM_ScrollViewerControlTemplate}"></Setter>
            </Style>

            <system:Double x:Key="OneItemHeight">40</system:Double>

            <Style TargetType="ListBoxItem">
                <Setter Property="IsSelected" Value="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" />
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Grid Name="Grid" FocusVisualStyle="{x:Null}" Background="{DynamicResource MainBgColorBrush}">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="{Binding ObjectVisibilityInList, UpdateSourceTrigger=PropertyChanged}"></Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Server.Id}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"></Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>

                                <Border x:Name="GridContainer"></Border>
                                <ContentPresenter
                                    Content="{TemplateBinding ContentControl.Content}"
                                    ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}"
                                    ContentStringFormat="{TemplateBinding ContentControl.ContentStringFormat}"
                                    HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
                                    SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="IsSelected" Value="True" />
                                    <Setter Property="Background" TargetName="GridContainer" Value="{DynamicResource MainColor1ForegroundBrush}"></Setter>
                                    <Setter Property="Opacity" Value="0.2" TargetName="GridContainer" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <ControlTemplate x:Key="ListBoxTemplateForServerCards" TargetType="{x:Type ListBox}">
                <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" Background="{TemplateBinding Background}" Padding="0" SnapsToDevicePixels="True">
                    <ScrollViewer Focusable="False" Padding="{TemplateBinding Padding}">
                        <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </ScrollViewer>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" TargetName="Bd" Value="White" />
                        <Setter Property="BorderBrush" TargetName="Bd" Value="#FFD9D9D9" />
                    </Trigger>
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsGrouping" Value="True" />
                            <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="False" />
                        </MultiTrigger.Conditions>
                        <Setter Property="ScrollViewer.CanContentScroll" Value="False" />
                    </MultiTrigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
            <ItemsPanelTemplate x:Key="ItemsPanelTemplateForServerCards">
                <WrapPanel Orientation="Horizontal" Width="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType=ListBox}, Path=ActualWidth}" />
            </ItemsPanelTemplate>
            <DataTemplate x:Key="DataTemplateForServerCards" DataType="protocol:VmProtocolServer">
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="{Binding ObjectVisibilityInList}"></Setter>
                            <Setter Property="Height" Value="164"></Setter>
                            <Setter Property="Width" Value="165"></Setter>
                        </Style>
                    </Grid.Style>
                    <controls:ServerCard VmProtocolServer="{Binding}">
                    </controls:ServerCard>
                </Grid>
            </DataTemplate>

            <ControlTemplate x:Key="ListBoxTemplateForServerList" TargetType="{x:Type ListBox}">
                <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="0" SnapsToDevicePixels="true">
                    <ScrollViewer Focusable="false" Padding="{TemplateBinding Padding}"
                                              Grid.IsSharedSizeScope="True"
                                              Template="{DynamicResource PRM_ScrollViewerControlTemplate}">
                        <Grid x:Name="Grid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Height="{StaticResource OneItemHeight}">
                                <Grid.Margin>
                                    <Thickness Right="{StaticResource ScrollBarWidth}"></Thickness>
                                </Grid.Margin>
                                <Grid VerticalAlignment="Center">
                                    <Grid.Resources>
                                        <Style TargetType="Path" x:Key="HeaderPathStyle">
                                            <Setter Property="Visibility" Value="Hidden" />
                                            <Setter Property="StrokeThickness" Value="1" />
                                            <Setter Property="Fill" Value="Gray" />
                                            <Setter Property="Width" Value="20" />
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Margin" Value="5,0,5,0" />
                                            <Setter Property="SnapsToDevicePixels" Value="True" />
                                        </Style>
                                    </Grid.Resources>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Logo"></ColumnDefinition>
                                        <ColumnDefinition Width="40"   SharedSizeGroup="Name"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto" MaxWidth="150" SharedSizeGroup="GroupName"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto" MaxWidth="200" SharedSizeGroup="Address"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <controls1:ButtonEx HorizontalContentAlignment="Left" Grid.Column="0" Style="{StaticResource MainColor1ButtonRadius3}"
                                                                    Background="{DynamicResource MainBgColorBrush}"
                                                                    Foreground="{DynamicResource MainBgColorForegroundBrush}"
                                                                    Command="{Binding CmdReOrder}" CommandParameter="0">
                                        <Grid>
                                            <Path Data="M 7,3 L 13,3 L 10,0 L 7,3">
                                                <Path.Style>
                                                    <Style TargetType="Path" BasedOn="{StaticResource HeaderPathStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=General.ServerOrderBy}" Value="{x:Static model:EnumServerOrderBy.Protocol}">
                                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <Path Data="M 7,0 L 10,3 L 13,0 L 7,0">
                                                <Path.Style>
                                                    <Style TargetType="Path" BasedOn="{StaticResource HeaderPathStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=General.ServerOrderBy}" Value="{x:Static model:EnumServerOrderBy.ProtocolDesc}">
                                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <TextBlock Margin="5" HorizontalAlignment="Left" Text="{DynamicResource server_protocol}"></TextBlock>
                                        </Grid>
                                    </controls1:ButtonEx>

                                    <controls1:ButtonEx HorizontalContentAlignment="Left" Grid.Column="2" Style="{StaticResource MainColor1ButtonRadius3}"
                                                                    Background="{DynamicResource MainBgColorBrush}"
                                                                    Foreground="{DynamicResource MainBgColorForegroundBrush}"
                                                                    Command="{Binding CmdReOrder}" CommandParameter="2">
                                        <Grid>
                                            <Path Data="M 7,3 L 13,3 L 10,0 L 7,3">
                                                <Path.Style>
                                                    <Style TargetType="Path" BasedOn="{StaticResource HeaderPathStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=General.ServerOrderBy}" Value="{x:Static model:EnumServerOrderBy.Name}">
                                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <Path Data="M 7,0 L 10,3 L 13,0 L 7,0">
                                                <Path.Style>
                                                    <Style TargetType="Path" BasedOn="{StaticResource HeaderPathStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=General.ServerOrderBy}" Value="{x:Static model:EnumServerOrderBy.NameDesc}">
                                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <TextBlock Margin="5" HorizontalAlignment="Left" Text="{DynamicResource word_name}"></TextBlock>
                                        </Grid>
                                    </controls1:ButtonEx>

                                    <controls1:ButtonEx HorizontalContentAlignment="Left" Grid.Column="3" Style="{StaticResource MainColor1ButtonRadius3}"
                                                                    Background="{DynamicResource MainBgColorBrush}"
                                                                    Foreground="{DynamicResource MainBgColorForegroundBrush}"
                                                                    Command="{Binding CmdReOrder}" CommandParameter="4">
                                        <Grid>
                                            <Path Data="M 7,3 L 13,3 L 10,0 L 7,3">
                                                <Path.Style>
                                                    <Style TargetType="Path" BasedOn="{StaticResource HeaderPathStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=General.ServerOrderBy}" Value="{x:Static model:EnumServerOrderBy.GroupName}">
                                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <Path Data="M 7,0 L 10,3 L 13,0 L 7,0">
                                                <Path.Style>
                                                    <Style TargetType="Path" BasedOn="{StaticResource HeaderPathStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=General.ServerOrderBy}" Value="{x:Static model:EnumServerOrderBy.GroupNameDesc}">
                                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <TextBlock Margin="5" HorizontalAlignment="Left" Text="{DynamicResource server_editor_group}"></TextBlock>
                                        </Grid>
                                    </controls1:ButtonEx>

                                    <controls1:ButtonEx HorizontalContentAlignment="Left" Grid.Column="4" Style="{StaticResource MainColor1ButtonRadius3}"
                                                                    Background="{DynamicResource MainBgColorBrush}"
                                                                    Foreground="{DynamicResource MainBgColorForegroundBrush}"
                                                                    Command="{Binding CmdReOrder}" CommandParameter="6">
                                        <Grid>
                                            <Path Data="M 7,3 L 13,3 L 10,0 L 7,3">
                                                <Path.Style>
                                                    <Style TargetType="Path" BasedOn="{StaticResource HeaderPathStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=General.ServerOrderBy}" Value="{x:Static model:EnumServerOrderBy.Address}">
                                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <Path Data="M 7,0 L 10,3 L 13,0 L 7,0">
                                                <Path.Style>
                                                    <Style TargetType="Path" BasedOn="{StaticResource HeaderPathStyle}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=General.ServerOrderBy}" Value="{x:Static model:EnumServerOrderBy.AddressDesc}">
                                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <TextBlock Margin="5" HorizontalAlignment="Left" Text="{DynamicResource server_editor_connection_address}" />
                                        </Grid>
                                    </controls1:ButtonEx>
                                </Grid>
                            </Grid>
                            <ItemsPresenter Grid.Row="1" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Grid>
                    </ScrollViewer>
                </Border>
                <ControlTemplate.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Items.Count}" Value="0">
                        <Setter TargetName="Grid" Property="Visibility" Value="Hidden"></Setter>
                    </DataTrigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
            <ItemsPanelTemplate x:Key="ItemsPanelTemplateForServerList">
                <StackPanel></StackPanel>
            </ItemsPanelTemplate>
            <DataTemplate x:Key="DataTemplateForServerList" DataType="protocol:VmProtocolServer">
                <Grid Name="Grid" FocusVisualStyle="{x:Null}" Background="{DynamicResource MainBgColorBrush}">
                    <Grid.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding CmdConnServer}"></MouseBinding>
                        <MouseBinding MouseAction="RightClick" Command="{Binding CmdEditServer}"></MouseBinding>
                    </Grid.InputBindings>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="{Binding ObjectVisibility, UpdateSourceTrigger=PropertyChanged}"></Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Server.Id}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Border x:Name="GridContainer"></Border>
                    <Grid Height="{StaticResource OneItemHeight}">
                        <Grid.Margin>
                            <Thickness Left="10" Right="{StaticResource ScrollBarWidth}"></Thickness>
                        </Grid.Margin>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Logo"></ColumnDefinition>
                                <ColumnDefinition Width="40" SharedSizeGroup="Name"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="GroupName"></ColumnDefinition>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="Address"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Margin="5 0"
                                                   Text="{Binding Server.ProtocolDisplayName}"
                                                   FontSize="14" FontWeight="Bold"
                                                   HorizontalAlignment="Left"
                                                   Opacity="0.4"
                                                   Foreground="{DynamicResource MainColor1Brush}"
                                                   VerticalAlignment="Center"></TextBlock>
                            <TextBlock Grid.Column="0" Margin="5 0"
                                                   Text="{Binding Server.ProtocolDisplayName}"
                                                   FontSize="14" FontWeight="Bold"
                                                   Foreground="{DynamicResource MainColor1ForegroundBrush}"
                                                   Opacity="0.2"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center">
                            </TextBlock>

                            <Grid Grid.Column="1" Width="30" HorizontalAlignment="Center" Margin="5 0">
                                <Image Source="{Binding Server.IconImg}" Width="{Binding Path=Width, RelativeSource={RelativeSource FindAncestor,AncestorType=Grid}}"></Image>
                            </Grid>

                            <TextBlock Grid.Column="2" Margin="5 0"
                                                                 FontSize="14" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                                                 Text="{Binding Server.DispName}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=Text}"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="ToolTip" Value="{x:Null}"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Column="3" Margin="5 0" MaxWidth="100"
                                                                 FontSize="14" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                                                 Text="{Binding Server.GroupName}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=Text}"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="ToolTip" Value="{x:Null}"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock Grid.Column="4" Margin="5 0" MaxWidth="500"
                                                                 FontSize="14" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                                                 Text="{Binding Server.SubTitle}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=Text}"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="ToolTip" Value="{x:Null}"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Grid>
                <DataTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" TargetName="GridContainer" Value="{DynamicResource MainColor1ForegroundBrush}"></Setter>
                        <Setter Property="Opacity" Value="0.2" TargetName="GridContainer" />
                    </Trigger>
                </DataTemplate.Triggers>
            </DataTemplate>

            <Style x:Key="ServerListStyle" TargetType="ListBox">
                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                <Setter Property="Padding" Value="10 0 0 0"></Setter>
                <Setter Property="Template" Value="{StaticResource ListBoxTemplateForServerCards}"></Setter>
                <Setter Property="ItemsPanel" Value="{StaticResource ItemsPanelTemplateForServerCards}"></Setter>
                <Setter Property="ItemTemplate" Value="{StaticResource DataTemplateForServerCards}"></Setter>

                <Style.Triggers>
                    <DataTrigger Binding="{Binding Source={x:Static model:SystemConfig.Instance}, Path=Theme.ServerListPageUI}" Value="{x:Static model:EnumServerListPageUI.List}">
                        <Setter Property="Padding" Value="0 0 0 0"></Setter>
                        <Setter Property="Template" Value="{StaticResource ListBoxTemplateForServerList}"></Setter>
                        <Setter Property="ItemsPanel" Value="{StaticResource ItemsPanelTemplateForServerList}"></Setter>
                        <Setter Property="ItemTemplate" Value="{StaticResource DataTemplateForServerList}"></Setter>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MainColor1Brush}">
        <Grid Margin="0 21 0 0" Background="{DynamicResource MainBgColorBrush}">
            <Border HorizontalAlignment="Right">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"></Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ServerListItems.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource MainBgColorForeground}" BlurRadius="5" Opacity="0.8" Direction="300" ShadowDepth="3"></DropShadowEffect>
                </Border.Effect>
                <StackPanel>
                    <Path Fill="{DynamicResource MainBgColorForegroundBrush}" Margin="25 10 30 5" Width="50" Stretch="UniformToFill" Data="M 70.3711 1.2207 L 63.1409 2.666 L 68.054 2.78 C 61.006 12.645 49.14 12.505 47 24 C 46.938 24.449 47.885 24.549 48 24 C 50.066 12.953 62.38 12.673 68.819 3.201 L 69 8 Z" />
                    <TextBlock Foreground="{DynamicResource MainBgColorForegroundBrush}" FontSize="22" FontWeight="Bold">Add</TextBlock>
                </StackPanel>
            </Border>
            <ListBox
                Name="LvServerCards"
                Grid.IsSharedSizeScope="True"
                HorizontalContentAlignment="Stretch"
                SelectedItem="{Binding SelectedServerListItem}"
                ItemsSource="{Binding ServerListItems}"
                Margin="0 2 0 0" BorderThickness="0" Background="Transparent"
                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                Style="{DynamicResource ServerListStyle}">
            </ListBox>
        </Grid>

        <Grid VerticalAlignment="Top">
            <Border BorderThickness="0 0 0 1" BorderBrush="{DynamicResource MainColor2Brush}" Background="{DynamicResource MainColor1ForegroundBrush}" Height="20">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" Direction="270"  Opacity="0.6" Color="Black"></DropShadowEffect>
                </Border.Effect>
            </Border>

            <Border BorderThickness="0 0 0 2" BorderBrush="{DynamicResource MainColor2Brush}" Background="{DynamicResource MainColor1Brush}">
                <Grid Height="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <controls1:ButtonEx Padding="0 1 0 0"
                                        MinWidth="80"
                                        Click="BtnAllServer_Click"
                                        BorderThickness="0" Content="{DynamicResource tab_all}">
                        <controls1:ButtonEx.Style>
                            <Style TargetType="{x:Type controls1:ButtonEx}" BasedOn="{StaticResource MainColor2Button}">
                                <Setter Property="Background" Value="{DynamicResource MainColor1Brush}"></Setter>
                                <Setter Property="Foreground" Value="{DynamicResource MainColor1ForegroundBrush}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Grid>
                                                <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    SnapsToDevicePixels="true">
                                                </Border>
                                                <ContentPresenter
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource MainColor2LighterBrush}"></Setter>
                                        <Setter Property="Foreground" Value="{DynamicResource MainColor2ForegroundBrush}" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding SelectedGroup}" Value="">
                                        <Setter Property="Background" Value="{DynamicResource MainColor2Brush}"></Setter>
                                        <Setter Property="Foreground" Value="{DynamicResource MainColor2ForegroundBrush}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedGroup}" Value="{x:Null}">
                                        <Setter Property="Background" Value="{DynamicResource MainColor2Brush}"></Setter>
                                        <Setter Property="Foreground" Value="{DynamicResource MainColor2ForegroundBrush}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </controls1:ButtonEx.Style>
                    </controls1:ButtonEx>

                    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto"
                                      Height="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType=Grid}, Path=Height}"
                                      utils:ScrollViewerExtensions.IsHorizontalScrollOnWheelEnabled="true"
                                      Style="{StaticResource MinHorizontalScrollViewerStyle}">
                        <StackPanel Orientation="Horizontal">
                            <ListBox
                                    IsSynchronizedWithCurrentItem="True"
                                    ItemsSource="{Binding ServerGroupList}"
                                    SelectedValue="{Binding SelectedGroup}"
                                    Background="{DynamicResource MainColor1Brush}"
                                    Height="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType=ScrollViewer}, Path=Height}"
                                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                    BorderThickness="0"
                                    Margin="0"
                                    Padding="0">
                                <ListBox.Style>
                                    <Style TargetType="ListBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBox">
                                                    <ItemsPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.Style>
                                <ListBox.Resources>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border BorderThickness="0" Margin="{TemplateBinding Margin}"
                                                        Padding="{TemplateBinding Control.Padding}"
                                                        Background="{TemplateBinding Panel.Background}"
                                                        Name="Bd"
                                                        SnapsToDevicePixels="True">
                                                        <ContentPresenter
                                                                Content="{TemplateBinding ContentControl.Content}"
                                                                ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}"
                                                                ContentStringFormat="{TemplateBinding ContentControl.ContentStringFormat}"
                                                                HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
                                                                SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="Selector.IsSelected" Value="True">
                                                            <Setter Property="Opacity" TargetName="Bd" Value="1"></Setter>
                                                            <Setter Property="Background" TargetName="Bd" Value="{DynamicResource MainColor2Brush}"></Setter>
                                                        </Trigger>
                                                        <MultiTrigger>
                                                            <MultiTrigger.Conditions>
                                                                <Condition Property="Selector.IsSelected" Value="False"></Condition>
                                                                <Condition Property="UIElement.IsMouseOver" Value="True"></Condition>
                                                            </MultiTrigger.Conditions>
                                                            <MultiTrigger.Setters>
                                                                <Setter Property="Background" TargetName="Bd" Value="{DynamicResource MainColor2LighterBrush}"></Setter>
                                                            </MultiTrigger.Setters>
                                                        </MultiTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>

                                        <Setter Property="Foreground" Value="{DynamicResource MainColor1ForegroundBrush}"></Setter>
                                        <Style.Triggers>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="Selector.IsSelected" Value="False"></Condition>
                                                    <Condition Property="UIElement.IsMouseOver" Value="True"></Condition>
                                                </MultiTrigger.Conditions>
                                                <MultiTrigger.Setters>
                                                    <Setter Property="Foreground" Value="{DynamicResource MainColor2ForegroundBrush}"></Setter>
                                                </MultiTrigger.Setters>
                                            </MultiTrigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource MainColor2ForegroundBrush}"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.Resources>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock Margin="15 0"
                                                           Foreground="{Binding Path=Foreground,RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}"
                                                           FontWeight="{Binding Path=FontWeight,RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}"
                                                           Text="{Binding}"></TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </ScrollViewer>

                    <controls1:ButtonEx Grid.Column="2" Padding="0 1 0 0" Width="40" Command="{Binding CmdAdd}">
                        <controls1:ButtonEx.Style>
                            <Style TargetType="{x:Type controls1:ButtonEx}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type controls1:ButtonEx}">
                                            <Grid Name="Grid" Background="{DynamicResource MainColor1Brush}">
                                                <Grid Width="16" Height="16">
                                                    <Path Data="M 41.888 18.304 L 41.888 23.584 L 23.584 23.584 L 23.584 41.888 L 18.304 41.888 L 18.304 23.584 L 0 23.584 L 0 18.304 L 18.304 18.304 L 18.304 0 L 23.584 0 L 23.584 18.304 Z"
                                                           Stretch="Fill" Name="Path"
                                                           Margin="2" Fill="{DynamicResource MainColor1LighterBrush}">
                                                    </Path>
                                                </Grid>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Path" Property="Margin" Value="0"></Setter>
                                                    <Setter TargetName="Grid" Property="Background" Value="{DynamicResource MainColor1LighterBrush}"></Setter>
                                                    <Setter TargetName="Path" Property="Fill" Value="{DynamicResource MainColor1ForegroundBrush}"></Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </controls1:ButtonEx.Style>
                    </controls1:ButtonEx>
                </Grid>
            </Border>
        </Grid>

        <Grid Name="GridBottom" VerticalAlignment="Bottom" Height="30" Background="{DynamicResource MainColor1Brush}">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity" Value="0.9"></Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=LvServerCards, Path=SelectedItem}" Value="{x:Null}">
                            <Setter Property="Opacity" Value="0"></Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=LvServerCards, Path=SelectedItem.Server.DispName}" Value="">
                            <Setter Property="Opacity" Value="0"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}">
                        <Setter Property="Foreground" Value="{DynamicResource MainColor1ForegroundBrush}"></Setter>
                        <Setter Property="Margin" Value="0 0 5 0"></Setter>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="{Binding SelectedServerListItem.Server.DispName}"></TextBlock>
                <TextBlock Text="{Binding SelectedServerListItem.Server.SubTitle}"></TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>