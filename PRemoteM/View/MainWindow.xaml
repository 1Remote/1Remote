                    </Path>
                </Button>
            </StackPanel>


            <!-- Paging Area -->
            <Grid Grid.Row="1">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=ProcessingRingVisibility, Mode=OneWay}" Value="Visible">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <BlurEffect Radius="2" KernelType="Box"></BlurEffect>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <pageHost:PageHost NewPage="{Binding AnimationPageServerList}"></pageHost:PageHost>
                <pageHost:PageHost x:Name="MidPageHost" NewPage="{Binding AnimationPageEditor}"></pageHost:PageHost>
                <pageHost:PageHost x:Name="SettingsPageHost" NewPage="{Binding AnimationPageSettings}"></pageHost:PageHost>
                <pageHost:PageHost x:Name="AboutPageHost" NewPage="{Binding AnimationPageAbout}"></pageHost:PageHost>


            </Grid>
        </Grid>


        <!--Processing Ring-->
        <Grid Visibility="{Binding ProcessingRingVisibility, Mode=OneWay}"
              PreviewMouseDown="ProcessingRing_OnPreviewMouseDown"
              MouseUp="WinTitleBar_OnMouseUp"
              PreviewMouseMove="WinTitleBar_OnPreviewMouseMove">
            <Grid Background="Black" Opacity="0.5"></Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 40 0 0">
                <Control Style="{StaticResource BusyAnimationStyle}" Background="Transparent"/>
                <TextBlock Margin="100 0" Foreground="White" Text="{Binding ProcessingRingMessage}" TextWrapping="Wrap"></TextBlock>
            </StackPanel>
        </Grid>


        <!--RequestRatingPopup-->
        <Grid Background="Transparent" Visibility="{Binding RequestRatingPopupVisibility}"
              PreviewMouseDown="ProcessingRing_OnPreviewMouseDown"
              MouseUp="WinTitleBar_OnMouseUp"
              PreviewMouseMove="WinTitleBar_OnPreviewMouseMove">
            <Border Background="{DynamicResource PrimaryMidBrush}" BorderBrush="{DynamicResource DefaultBorderBrush}" BorderThickness="1"
                        VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.8" ></DropShadowEffect>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" Margin="40 0">
                    <Grid HorizontalAlignment="Center" Margin="5 30 5 5">
                        <Image Source="/Resources/Image/Logo/logo64.png" Width="64" HorizontalAlignment="Left"></Image>
                    </Grid>
                    <TextBlock FontSize="16" Foreground="{StaticResource PrimaryTextBrush}" TextWrapping="Wrap" Text="{DynamicResource 'Hi there,'}"></TextBlock>
                    <StackPanel Margin="30 0">
                        <TextBlock FontSize="18" Opacity="0.7" TextWrapping="Wrap" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"
                                       Text="{DynamicResource 'I hope that you find this app useful. If you would like to support my work, you can buy me a coffee or give a nice review. Thanks!'}" />
                        <StackPanel Margin="0,16,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Background" Value="Green" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.6" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>
                            <Border Margin="4, 0" VerticalAlignment="Center" CornerRadius="4" Width="130" Background="#e53e3e">
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://github.com/VShawn/PRemoteM/issues/" utils:HyperlinkHelper.IsOpenExternal="True" TextDecorations="">
