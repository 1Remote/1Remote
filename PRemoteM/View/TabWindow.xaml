                </Grid>
            </Button>


            <Button Name="BtnCloseAll" Command="{Binding CmdClose}" Visibility="{Binding BtnCloseAllVisibility}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource WinTitleBarBtnStyle}">
                        <Style.Triggers>
                            <Trigger Property="Button.IsMouseOver" Value="True">
