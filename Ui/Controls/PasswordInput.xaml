                                                  Fill="{TemplateBinding BorderBrush}" Opacity="0.8" StrokeThickness="0.75" Stretch="Uniform" />
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9" />
