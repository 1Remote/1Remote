                                                      Stretch="Uniform"
                                                      Width="6"
                                                      Margin="0 0 -3 0"
                                                      VerticalAlignment="Top" HorizontalAlignment="Right">
                                                </Path>
                                            </Grid>
                                        </Hyperlink>
                                    </TextBlock>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Style="{StaticResource EditorGroupTextBlockTitle}" Text="Author"></TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <Grid Width="32" Height="32">
                                    <Image Source="pack://application:,,,/Resources/Image/Logo/author_avatar.jpg" Width="32"></Image>
                                </Grid>
                                <StackPanel Orientation="Vertical" Margin="10 0 0 0" VerticalAlignment="Center">
                                    <TextBlock>
                                        <Hyperlink NavigateUri="https://github.com/VShawn" TextDecorations="{x:Null}" controls:HyperlinkHelper.IsOpenExternal="True">
                                            Shawn
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock>
                                        <Hyperlink NavigateUri="mailto::veckshawn@gmail.com?subject=1Remote" TextDecorations="{x:Null}" controls:HyperlinkHelper.IsOpenExternal="True">
                                            (veckshawn@gmail.com)
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <Grid Grid.Column="1">
                        <StackPanel Orientation="Vertical" Margin="20 0 0 0">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Style="{StaticResource EditorGroupTextBlockTitle}" Text="Support"></TextBlock>
                                <StackPanel>
                                    <Grid Style="{StaticResource RowGrid}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock>
                                                <Hyperlink NavigateUri="https://github.com/1Remote/1Remote/wiki" TextDecorations="{x:Null}" controls:HyperlinkHelper.IsOpenExternal="True">
                                                    How to use
                                                </Hyperlink>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Style="{StaticResource EditorGroupTextBlockTitle}" Text="Make contributions"></TextBlock>

                                <StackPanel HorizontalAlignment="Left" MaxWidth="500">
                                    <StackPanel>
                                        <TextBlock FontSize="18" Opacity="0.7" TextWrapping="Wrap" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center"
                                                       Text="{DynamicResource 'I hope that you find this app useful. If you would like to support my work, you can buy me a coffee or give a nice review. Thanks!'}" />
                                        <StackPanel Margin="0,16,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                                            <StackPanel.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="Background" Value="Green" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.6" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Resources>
                                            <Border Margin="4, 0" VerticalAlignment="Center" CornerRadius="4" Width="130" Background="#e53e3e">
